    "puppeteer": "^4.0.0"
  },
  "devDependencies": {
    "@types/nodemailer": "^6.4.0",
    "@types/puppeteer": "^3.0.0",
    "husky": "^4.2.5",
    "prettier": "2.0.5",
    "pretty-quick": "^2.0.1",
    "tslint": "^6.1.2",
    "typescript": "^3.9.5"
  },
  "private": true,
  "engines": {
    "node": "10"
  },
  "husky": {
    "hooks": {
